{
    "$id": "https://sikka.tech/ibc.schema.json",
    "$schema": "https://json-schema.org/draft-07/schema",
    "title": "IBC",
    "description": "ibc.json is a metadata file that contains information about the ibc network",
    "type": "object",
    "required": [
        "channel_pairs"
    ],
    "properties": {
        "channel_pairs": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/endpoints_pair"
            }
        }
    },
    "$defs": {
        "endpoints_pair": {
            "type": "object",
            "required": [
                "endpoints"
            ],
            "properties": {
                "preferred": {
                    "type": "boolean"
                },
                "endpoints": {
                    "type": "array",
                    "items": {
                        "$ref": "#/defs/endpoint"
                    },
                    "minItems": 2,
                    "maxItems": 2
                }
            }
        },
        "endpoint": {
            "type": "object",
            "required": [
                "chain_name",
                "chain_id",
                "channel_id",
                "port_id",
                "version"
            ],
            "properties": {
                "chain_name": {
                    "type": "string"
                },
                "chain_id": {
                    "type": "string"
                },
                "client_id": {
                    "type": "string"
                },
                "connection_id": {
                    "type": "string"
                },
                "channel_id": {
                    "type": "string"
                },
                "port_id": {
                    "type": "string"
                },
                "order": {
                    "type": "string"
                }, 
                "version": {
                    "type": "string"
                }
            }
        }
    }
}
